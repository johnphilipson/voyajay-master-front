        'use strict';
        
        $('.start-b , .icon').on('click', function () {
            var $this = $(this);
            if ($this.hasClass('icon--arrow-up')) {
            var $slide = $(window).scrollTop() - $(window).height();
            }
            if ($this.hasClass('icon--arrow-down')) {
            var $slide = $(window).scrollTop() + $(window).height();
            }
            
            $('html, body').animate({
            scrollTop: $slide
            }, 1200);
        });
        
        })(jQuery)


        $(function(){
                $('.start-b').on("click", function () {
                $('.section--red').delay(2000).fadeOut();
                });
            
            
            $('.icon').on("click", function () {
                $('.section--red').fadeIn();
                });
                
            
        }); 


