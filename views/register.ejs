    <script>

$(document).ready(function(){
		var date_input=$('input[name="dob"]'); //our date input has the name "date"
		date_input.datepicker({
			format: 'mm/dd/yyyy',
			todayHighlight: true,
			autoclose: true,
		})
	})


        $(function() {
            $('input[name="contact"]').on('click', function() {
                if ($(this).val() == 'email') {
                    $('#phone-css').hide();
                    $('#mail-css').show();
                }
            else if($(this).val() == 'm-phone')
            {
                $('#phone-css').show();
                $('#mail-css').hide();  
                }
            });
        });

        var today = new Date()
                //Calculates age from given Birth Date in the form//
                function _calcAge(birthDate, givenDate) {
                givenDate = new Date(today);
                var dt1 = document.getElementById('datepicker').value;
                var birthDate = new Date(dt1);
                var years = (givenDate.getFullYear() - birthDate.getFullYear());

                if (givenDate.getMonth() < birthDate.getMonth() ||
                givenDate.getMonth() == birthDate.getMonth() && givenDate.getDate() < birthDate.getDate()) {
                years--;
                }

                return years;
            }

            //Compares calculated age with minimum age and acts according to rules//
                function _setAge() {
                    var age = _calcAge();
                    if (age < 16) {
                        document.getElementById("dobstatus").innerHTML= "<span class='warning'>People under sixteen are ineligible for sign-up</span>";
                        } 
                    else
                        document.getElementById("dobstatus").innerHTML	= "";	
                    }

                    $('#submitbtn').click(function(){
                        $(".confirmation").show();


                    });
      
                  // Below Function Executes On Form Submit
                function ValidationEvent() {
                // Storing Field Values In Variables
                var fname = document.getElementById("fname").value;
                var lname = document.getElementById("lname").value;
                var datepicker = document.getElementById("datepicker").value;
                var address = document.getElementById("address").value;
                
                if (fname != '' && lname != '' && datepicker != '' && address != '') { 
                    animating = false;
                }
                 else {
                        document.getElementById("filedsetfirsterr").style.display = "block";
                    animating = true;
                return false;
                    }
                }
                
                function validationsecondform(){
    
                var radios = document.getElementsByName("home");
                var formValid = false;

                var i = 0;
                while (!formValid && i < radios.length) {
                if (radios[i].checked) formValid = true;
                i++;        
                }

             if (!formValid) {
             document.getElementById("filedsetsecerr").style.display = "block";
             animating = true;
             }

             else{
                animating = false;
             }
                }


    </script>

